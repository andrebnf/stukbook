<div class="row profile-info">
	<div class="columns large-4">
		<%= gravatar_tag @user.email, size: 200 %>
	</div>
	<div class="columns large-4">
		<h3><%= @user.username %></h3>
		<p>Age: <%= @user.age %></p>
		<p>Gender: <%= @user.gender %></p>
	</div>
	<div class="columns large-4">
		<h3>Who am I</h3>
		<small><%= @user.bio %></small>
	</div>
</div>